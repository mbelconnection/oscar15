<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="QuatroIntakeDB" table="intake">
		<id name="id" type="integer" column="intake_id" unsaved-value="0">
			<generator class="sequence">
	   			 <param name="sequence">seq_intake_id</param>
			</generator>
		</id>

		<property name="clientId" column="client_id" type="integer" not-null="true" />
		<property name="staffId" column="staff_id" type="string" not-null="true" />
		<property name="createdOn" column="creation_date" type="calendar" not-null="true" />
		<property name="endDate" column="end_date" type="calendar" not-null="false" />
		<property name="intakeStatus" column="intake_status"/>
		<property name="programId" column="program_id" type="integer" not-null="true" />
		<property name="lastUpdateDate" column="lastupdatedate"></property>	
		<property name="lastUpdateUserId" column="lastupdate_userid"></property>	
	    <property name="lastUpdateUserName" lazy="true" formula="(select concat(p.last_name, concat(', ', p.first_name)) from Provider p where p.provider_no=lastupdate_userid)"></property> 
		<property name="nerverExpiry" column="never_end" type="boolean"></property>
		<property name="sdmtBenUnitStatus" column="sdmt_ben_unit_status"></property>
		<property name="sdmtOffice" column="sdmt_office"></property>
		<property name="sdmtLastBenMonth" column="sdmt_last_ben_month"></property>		
		<set name="answers"
			inverse="false"
			cascade="save-update"
			lazy="false">
			<key column="intake_id" not-null="true" />
			<one-to-many class="org.oscarehr.PMmodule.model.QuatroIntakeAnswer" />
		</set>
	</class>
</hibernate-mapping>