<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<class name="org.oscarehr.common.model.UserDSMessagePrefs" table="user_ds_message_prefs">
		<id name="id" unsaved-value="0">
			<generator class="native" />
		</id>
		<property column="resource_type" name="resourceType"
			not-null="false" type="string" />
		<property column="resource_id" name="resourceId" not-null="false"
			type="string" />
		<property column="resource_updated_date" name="resourceUpdatedDate"
			not-null="false" type="timestamp" />
		<property column="provider_no" name="providerNo" not-null="false"
			type="string" />

		<property column="record_created" name="recordCreated"
			not-null="false" type="timestamp" />
		<property column="archived" name="archived" not-null="false"
			type="boolean" />

	</class>
</hibernate-mapping>
