<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.oscarehr.eyeform.model">
	<class
		name="OcularProc"
		table="ocularprocedurehis"
	>
		
		<id
			name="id"
			type="integer"
			column="id"
		>
			<generator class="native"/>
		</id>

		<property
			name="demographicNo"
			column="demographic_no"
			type="integer"
			not-null="true"
			length="11"
		/>
		
		<property
			name="appointmentNo"
			column="appointment_no"
			type="integer"
			not-null="true"
			length="11"
		/>
		
		<property
			name="provider"
			column="provider"
			type="string"
			not-null="false"
			length="60"
		/>
		<property
			name="status"
			column="status"
			type="string"

		/>
		
		<property
			name="date"
			column="date"
			type="date"
			not-null="true"
			length="10"
		/>
		<property
			name="eye"
			column="eye"
			type="string"
			not-null="true"
			length="2"
		/>
		<property
			name="procedureName"
			column="procedure_name"
			type="string"
			not-null="true"
			length="100"
		/>
		<property
			name="procedureType"
			column="procedure_type"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="procedureNote"
			column="procedure_note"
			type="string"
			not-null="false"
		/>
		<property
			name="doctor"
			column="doctor"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="location"
			column="location"
			type="string"
			not-null="false"
			length="30"
		/>
		<property
			name="updateTime"
			column="update_time"
			type="timestamp"
			not-null="false"
			length="19"
		/>

	</class>	
</hibernate-mapping>
