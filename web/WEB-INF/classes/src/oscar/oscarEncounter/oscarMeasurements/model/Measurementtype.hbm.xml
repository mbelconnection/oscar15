<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="oscar.oscarEncounter.oscarMeasurements.model">
	<class
		name="Measurementtype"
		table="measurementType"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="integer"
			column="id"
		>
			<generator class="native"/>
		</id>

		<property
			name="type"
			column="type"
			type="string"
			not-null="true"
			length="4"
		/>
		<property
			name="typeDisplayName"
			column="typeDisplayName"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="typeDescription"
			column="typeDescription"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="measuringInstruction"
			column="measuringInstruction"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="validation"
			column="validation"
			type="string"
			not-null="true"
			length="100"
		/>


	</class>	
</hibernate-mapping>